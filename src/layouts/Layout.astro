<style is:global>
  :root {
    --primary: 0, 100, 200;
    --primary-light: 100, 180, 255;
    --primary-dark: 0, 50, 100;
    --secondary: 0, 200, 255;
    --dark: 10, 12, 16;
    --darker: 5, 7, 10;
    --light: 240, 240, 240;
    --gradient: linear-gradient(135deg, rgb(var(--primary)), rgb(var(--primary-light)));
    --glass: rgba(0, 0, 0, 0.3);
    --glass-border: rgba(255, 255, 255, 0.1);
    --shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    --transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', system-ui, sans-serif;
    background: rgb(var(--darker));
    color: white;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .glass-header {
    background: var(--glass);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--glass-border);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    animation: fadeIn 0.8s ease-out;
  }

  header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo h1 {
    font-size: 1.8rem;
    font-weight: 700;
    background: var(--gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: slideInLeft 0.8s ease-out;
  }

  .logo a {
    text-decoration: none;
  }

  .logo span {
    color: white;
  }

  nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    animation: slideInRight 0.8s ease-out;
  }

  nav a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
    position: relative;
  }

  nav a:not(.btn-primary):hover {
    color: rgb(var(--primary-light));
  }

  nav a:not(.btn-primary)::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient);
    transition: var(--transition);
  }

  nav a:not(.btn-primary):hover::after {
    width: 100%;
  }

  nav a.active {
    color: rgb(var(--primary-light));
  }

  nav a.active::after {
    width: 100%;
  }

  .btn-primary {
    background: var(--gradient);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    transition: var(--transition);
    box-shadow: 0 4px 15px rgba(var(--primary), 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(var(--primary), 0.5);
    animation: pulse 1.5s infinite;
  }

  /* Footer */
  footer {
    background: rgba(var(--primary-dark), 0.8);
    padding: 3rem 0 1rem;
    margin-top: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-logo h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    background: var(--gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
  }

  .footer-logo span {
    color: white;
  }

  .footer-logo p {
    opacity: 0.8;
  }

  .footer-links h3,
  .footer-social h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: white;
  }

  .footer-links ul {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: white;
    text-decoration: none;
    opacity: 0.8;
    transition: var(--transition);
  }

  .footer-links a:hover {
    opacity: 1;
    color: rgb(var(--primary-light));
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icons a {
    color: white;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    transition: var(--transition);
  }

  .social-icons a:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-3px);
  }

  .social-icons svg {
    width: 20px;
    height: 20px;
  }

  .copyright {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    header .container {
      flex-direction: column;
      gap: 1rem;
    }

    nav {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

];

// Ensure topics match the categories used in posts, including 'All'
const topics = ["All", "SSC", "PO", "Clerk", "NTPC", "Railways", "Class 10", "Others", "UPSC", "Banking", "State PSC", "General"];

const url = new URL(Astro.request.url);
const selectedTopic = url.searchParams.get('topic') || 'All';

// Filter posts based on the selected topic
const filteredPosts = selectedTopic === 'All'
  ? posts
  : posts.filter(post => post.category.toLowerCase() === selectedTopic.toLowerCase());

// Log for debugging
console.log(`Selected Topic: ${selectedTopic}`);
console.log(`Number of filtered posts: ${filteredPosts.length}`);
if (filteredPosts.length > 0) {
  console.log("First filtered post category:", filteredPosts[0].category);
}
---

<Layout title="Blog | ExamPrep India">
  <main>
    <section class="blog-hero">
      <div class="container">
        <h1>ExamPrep <span>Blog</span></h1>
        <p class="subtitle">Latest tips, strategies and updates for government exam aspirants</p>
      </div>
    </section>

    <section class="blog-content">
      <div class="container">
        <div class="topics-container">
          <h3>Browse by Topic</h3>
          <div class="topics-scroll">
            {topics.map(topic => (
              <a href={`?topic=${topic}`} class={`topic-btn ${topic.toLowerCase() === selectedTopic.toLowerCase() ? 'active' : ''}`}>
                {topic}
              </a>
            ))}
          </div>
        </div>

        <div class="blog-grid">
          {filteredPosts.map(post => (
            <article class="post-card">
              <div class="post-image" style={`background-image: url(${post.image})`}></div>
              <div class="post-content">
                <div class="post-meta">
                  <span class="category">{post.category}</span>
                  <span class="date">{post.date}</span>
                </div>
                <h2>{post.title}</h2>
                <p class="excerpt">{post.excerpt}</p>
                <div class="post-footer">
                  <span class="read-time">{post.readTime}</span>
                  <a href="#" class="read-more">Read More â†’</a>
                </div>
              </div>
            </article>
          ))}
          {filteredPosts.length === 0 && (
            <article class="post-card empty">
              <h2>No posts found for this topic</h2>
              <p class="excerpt">Please select another topic or check back later for new content.</p>
            </article>
          )}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Add or update the --primary-light variable if not already defined in your global styles */
  :root {
    --primary: 33, 150, 243; /* Example blue */
    --primary-dark: 25, 118, 210; /* Example darker blue */
    --primary-light: 100, 181, 246; /* Example lighter blue */
    --gradient: linear-gradient(135deg, rgb(var(--primary-light)), rgb(var(--primary))); /* Example gradient */
  }

  .blog-hero {
    background: linear-gradient(135deg, rgba(var(--primary), 0.9), rgba(var(--primary-dark), 0.9));
    padding: 6rem 0 4rem;
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .blog-hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    animation: slideInLeft 0.8s ease-out;
  }

  .blog-hero span {
    color: rgb(var(--primary-light));
  }

  .blog-hero .subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    animation: slideInRight 0.8s ease-out;
  }

  .blog-content {
    padding: 4rem 0;
  }

  .topics-container {
    margin-bottom: 3rem;
  }

  .topics-container h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: rgb(var(--primary-light));
  }

  .topics-scroll {
    display: flex;
    gap: 0.8rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
    /* Add scrollbar styling if needed */
    scrollbar-width: thin;
    scrollbar-color: rgba(var(--primary-light), 0.5) transparent;
  }

  .topics-scroll::-webkit-scrollbar {
    height: 8px;
  }

  .topics-scroll::-webkit-scrollbar-track {
    background: transparent;
  }

  .topics-scroll::-webkit-scrollbar-thumb {
    background-color: rgba(var(--primary-light), 0.5);
    border-radius: 4px;
  }


  .topic-btn {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 25px;
    font-size: 0.9rem;
    white-space: nowrap;
    transition: all 0.3s ease;
    text-decoration: none; /* Ensure it looks like a button, not a link */
    display: inline-block; /* Ensure padding works correctly */
  }

  .topic-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  /* Style for the active topic button */
  .topic-btn.active {
    background: var(--gradient); /* Use the gradient for the active state */
    color: white;
    box-shadow: 0 4px 15px rgba(var(--primary), 0.3);
    font-weight: 600; /* Make active text bolder */
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .post-image {
    height: 200px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .post-card h2 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: white;
  }

  .excerpt {
    font-size: 0.95rem;
    opacity: 0.8;
    margin-bottom: 1.5rem;
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .read-time {
    font-size: 0.9rem;
    opacity: 0.7;
  }

  .read-more {
    color: rgb(var(--primary-light));
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .read-more:hover {
    opacity: 0.8;
  }

  .post-card.empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .post-card.empty h2 {
    color: rgb(var(--primary-light));
    margin-bottom: 1rem;
  }

  .post-card.empty .excerpt {
    opacity: 0.7;
    margin: 0;
  }

  @keyframes slideInLeft {
    from { opacity: 0; transform: translateX(-50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes slideInRight {
    from { opacity: 0; transform: translateX(50px); }
    to { opacity: 1; transform: translateX(0); }
  }
</style>

---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const exams = [
  {
    name: "BANKS Exam",
    description: "Comprehensive preparation for IBPS, SBI PO, and other banking sector recruitment exams",
    videoId: "j9W0u8GZ7Y4",
    icon: "üè¶"
  },
  {
    name: "Railways Exam",
    description: "Specialized courses for RRB NTPC, Group D, and other railway recruitment board exams",
    videoId: "8mJxpeIfjG0",
    icon: "üöÇ"
  },
  {
    name: "SSC Exam",
    description: "Complete preparation for Staff Selection Commission exams including CGL, CHSL and more",
    videoId: "6Z6DaL8J-lU",
    icon: "üìä"
  },
  {
    name: "Class 10th (NCERT & ICSE)",
    description: "Board exam preparation with comprehensive syllabus coverage for both NCERT and ICSE boards",
    videoId: "sYpYAZQoQhM",
    icon: "üìö"
  }
];

const studyTips = [
  {
    title: "Structured Study Plan",
    description: "Create a realistic timetable covering all subjects with regular revisions",
    icon: "üìÖ"
  },
  {
    title: "Previous Year Papers",
    description: "Solve at least 5 years' question papers to understand the pattern",
    icon: "üìù"
  },
  {
    title: "Mock Tests",
    description: "Take weekly full-length tests to improve speed and accuracy",
    icon: "‚è±Ô∏è"
  },
  {
    title: "Current Affairs",
    description: "Daily newspaper reading and monthly current affairs compilation",
    icon: "üì∞"
  }
];
---

<Layout title="Indian Government Exam Preparation">
  <main>
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1>Ace Your <span>Government Exams</span> with Expert Guidance</h1>
          <p class="subtitle">Comprehensive preparation resources for Banking, Railways, SSC and more</p>
          <div class="cta-buttons">
            <a href="#exams" class="btn-primary">Explore Exams</a>
            <a href="#resources" class="btn-secondary">Free Resources</a>
          </div>
        </div>
      </div>
    </section>

    <section class="featured-video">
      <div class="container">
        <h2>Today's Featured <span>Preparation Video</span></h2>
        <div class="video-container">
          <iframe 
            width="100%" 
            height="100%" 
            src={`https://www.youtube.com/embed/${exams[0].videoId}`} 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </section>

    <section id="exams" class="exam-categories">
      <div class="container">
        <h2>Select Your <span>Exam Category</span></h2>
        <p class="section-description">Choose your target exam to access curated preparation materials</p>
        <div class="card-grid">
          {exams.map((exam, index) => (
            <Card
              href={`#${exam.videoId}`}
              title={exam.name}
              body={exam.description}
              icon={exam.icon}
              style={`animation-delay: ${index * 0.1}s`}
            />
          ))}
        </div>
      </div>
    </section>

    <section class="study-tips">
      <div class="container">
        <h2>Effective <span>Study Strategies</span></h2>
        <p class="section-description">Proven techniques to maximize your preparation efficiency</p>
        <div class="tips-grid">
          {studyTips.map((tip, index) => (
            <div class="tip-card" style={`animation-delay: ${index * 0.1 + 0.4}s`}>
              <div class="tip-icon">{tip.icon}</div>
              <h3>{tip.title}</h3>
              <p>{tip.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="newsletter">
      <div class="container">
        <div class="newsletter-content">
          <h2>Get Weekly <span>Preparation Tips</span></h2>
          <p>Subscribe to our newsletter for exam updates, study materials and strategy guides</p>
          <form class="newsletter-form">
            <input type="email" placeholder="Your email address" required />
            <button type="submit" class="btn-primary">Subscribe</button>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* New Animation Keyframes */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes gradientPulse {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes scaleIn {
    0% { transform: scale(0.95); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }

  @keyframes slideUp {
    from { transform: translateY(30px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .hero {
    background: linear-gradient(135deg, rgba(var(--primary-dark), 0.8), rgba(var(--darker), 0.9)), 
                url('https://images.unsplash.com/photo-1522202176988-66273c2fd55f?q=80&w=1470&auto=format&fit=crop') center/cover;
    padding: 6rem 0;
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
    animation: scaleIn 1s ease-out;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(var(--primary), 0.2), rgba(var(--secondary), 0.2));
    background-size: 200% 200%;
    animation: gradientPulse 15s ease infinite;
    z-index: 1;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  .hero h1 span {
    background: var(--gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
  }

  .subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s both;
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    transition: var(--transition);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .featured-video {
    padding: 4rem 0;
    background: rgba(var(--darker), 0.8);
  }

  .featured-video h2 {
    text-align: center;
    margin-bottom: 2rem;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  .featured-video h2 span {
    background: var(--gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: var(--shadow);
    transform: perspective(1000px) rotateX(0deg);
    transition: transform 0.5s ease, box-shadow 0.5s ease;
  }

  .video-container:hover {
    transform: perspective(1000px) rotateX(5deg);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .exam-categories {
    padding: 4rem 0;
    background: rgba(var(--dark), 0.8);
  }

  .exam-categories h2,
  .study-tips h2 {
    text-align: center;
    margin-bottom: 1rem;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  .exam-categories h2 span,
  .study-tips h2 span {
    background: var(--gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .section-description {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 2rem;
    opacity: 0.8;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .study-tips {
    padding: 4rem 0;
    background: rgba(var(--primary-dark), 0.1);
  }

  .tips-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .tip-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    transition: var(--transition);
    animation: fadeIn 0.8s ease-out;
    transform-style: preserve-3d;
  }

  .tip-card:hover {
    transform: translateY(-5px) rotateY(5deg);
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .tip-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    animation: float 3s ease-in-out infinite;
  }

  .tip-card h3 {
    margin-bottom: 0.5rem;
    color: rgb(var(--primary-light));
  }

  .newsletter {
    padding: 4rem 0;
    background: linear-gradient(135deg, rgba(var(--primary-dark), 0.8), rgba(var(--darker), 0.9));
    text-align: center;
  }

  .newsletter h2 {
    margin-bottom: 1rem;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  .newsletter h2 span {
    background: var(--gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .newsletter p {
    max-width: 600px;
    margin: 0 auto 2rem;
    opacity: 0.9;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
  }

  .newsletter-form {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
    gap: 0.5rem;
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s both;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    border-radius: 50px;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    outline: none;
    transition: var(--transition);
  }

  .newsletter-form input:focus {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.02);
  }

  .newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.2rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .newsletter-form {
      flex-direction: column;
    }
  }
</style>

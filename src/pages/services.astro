---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const features = [
  {
    name: "Video Lectures",
    description: "Comprehensive video courses covering all subjects and topics for each exam",
    icon: ""
  },
  {
    name: "Study Materials",
    description: "PDF notes, question banks, and syllabus breakdowns for focused preparation",
    icon: ""
  },
  {
    name: "Mock Tests",
    description: "Full-length simulated exams with detailed performance analysis",
    icon: ""
  },
  {
    name: "Current Affairs",
    description: "Daily news analysis and monthly compilations for GK preparation",
    icon: ""
  },
  {
    name: "Personalized Guidance",
    description: "One-on-one mentorship from top rankers and subject experts",
    icon: "‚Äç"
  },
  {
    name: "Railways Exam Prep",
    description: "Specialized courses and materials for RRB NTPC, Group D, and other railway exams",
    icon: ""
  }
];
---

<Layout title="Our Features | TeachMe">
  <main class="features-page">
    <section class="features-hero">
      <div class="container">
        <h1>Our <span>Features</span></h1>
        <p class="subtitle">Everything you need to ace your government exams in one place</p>
      </div>
    </section>

    <section class="features-list">
      <div class="container">
        <div class="card-grid">
          {features.map(feature => (
            <Card
              href="#"
              title={feature.name}
              body={feature.description}
              icon={feature.icon}
            />
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .features-page {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    padding-bottom: 4rem;
  }

  .features-hero {
    background: var(--gradient);
    padding: 6rem 0;
    color: white;
    text-align: center;
  }

  .features-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .features-hero h1 span {
    background: white;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    font-weight: 800;
  }

  .subtitle {
    font-size: 1.4rem;
    opacity: 0.9;
    max-width: 700px;
    margin: 0 auto;
  }

  .features-list {
    padding-top: 2rem;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .features-hero {
      padding: 4rem 0;
    }
    
    .features-hero h1 {
      font-size: 2.5rem;
    }
  }
</style>
